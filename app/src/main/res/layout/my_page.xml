<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <!-- 콘텐츠 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="My Page"
                            android:textSize="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/skyBlue"/>
                    </LinearLayout>
                    -->

                    <!-- 계정 정보 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="My Page"
                            android:textColor="@color/skyBlue"
                            android:textSize="25sp"
                            android:id="@+id/acInfo">

                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="계정이미지"
                                    android:gravity="center">

                                </TextView>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="4"
                                        android:text="아이디"
                                        android:gravity="center">

                                    </TextView>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="6"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="testID">

                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="4"
                                        android:text="별    명"
                                        android:gravity="center">

                                    </TextView>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="6"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="testName">

                                    </TextView>
                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="수정"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:backgroundTint="@color/skyBlue"
                                    android:id="@+id/editBtn">

                                </Button>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <!-- 알림 설정 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="알림 설정"
                            android:textColor="@color/skyBlue"
                            android:textSize="20sp">

                        </TextView>
                        <Switch
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:text="유통기한 임박 PUSH 알림"
                            android:id="@+id/swNs">

                        </Switch>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <Spinner
                                android:layout_width="330dp"
                                android:layout_height="match_parent"
                                android:id="@+id/spDay">

                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>
                    <!-- 서비스 이용 약관 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:text="서비스 이용 약관"
                            android:textColor="@color/skyBlue"
                            android:textSize="20sp">

                        </TextView>
                    </LinearLayout>
                    <!-- 개인정보 취급 방침 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/skyBlue"
                            android:text="개인정보 취급 방침"
                            android:textSize="20sp">

                        </TextView>
                    </LinearLayout>
                    <!-- 평가/공유/문의하기 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:background="@drawable/ic_baseline_thumb_up_24"
                                android:layout_margin="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="App 평가하기"
                                android:textColor="@color/black"
                                android:textSize="15sp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:background="@drawable/ic_baseline_share_24"
                                android:layout_margin="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="App 공유하기"
                                android:textColor="@color/black"
                                android:textSize="15sp">
                            </TextView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:background="@drawable/ic_baseline_email_24"
                                android:layout_margin="20dp">

                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="문의하기"
                                android:textColor="@color/black"
                                android:textSize="15sp">
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <!-- LOGOUT, DELETE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/gray"
                                android:text="회원탈퇴"
                                android:id="@+id/deleteBtn">
                            </Button>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darkGray"
                                android:layout_marginLeft="20dp"
                                android:text="로그아웃"
                                android:id="@+id/logoutBtn">

                            </Button>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <!-- 비밀번호 확인 팝업 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#CC212121"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/pwcLayout">
                <!-- 상단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                </LinearLayout>
                <!-- 팝업 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:background="@drawable/popup_box"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:text="비밀번호 확인"
                            android:textColor="@color/skyBlue"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:textSize="25sp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="비밀번호를 입력해주세요."
                            android:textSize="15sp">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:layout_margin="10dp"
                            android:orientation="vertical">
                            <!-- 아이디 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="아 이 디"
                                    android:gravity="center">
                                </TextView>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:text="textID"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:gravity="center">
                                </TextView>
                            </LinearLayout>
                            <!-- 비밀번호 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="비밀번호"
                                    android:gravity="center">
                                </TextView>
                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:hint="현재 비밀변호"
                                    android:textSize="15dp"
                                    android:inputType="textPassword"
                                    android:id="@+id/pwcPw">
                                </EditText>
                            </LinearLayout>
                        </LinearLayout>
                        <Button
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="확인"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/skyBlue"
                            android:id="@+id/pwcOkBtn">
                        </Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                </LinearLayout>
                <!-- 하단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                </LinearLayout>

            </LinearLayout>

            <!-- 계정정보수정 팝업 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#CC212121"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/editLayout">
                <!-- 상단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">

                </LinearLayout>
                <!-- 팝업 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@drawable/popup_box"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="계정 정보 수정"
                            android:textColor="@color/skyBlue"
                            android:textSize="25sp">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">
                            <!-- 아이디 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="아 이 디"
                                    android:gravity="center">
                                </TextView>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:text="testID"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:gravity="center">
                                </TextView>
                            </LinearLayout>
                            <!-- 비밀번호 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="비밀번호"
                                    android:gravity="center">
                                </TextView>
                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:hint="새로운 비밀번호"
                                    android:textSize="15dp"
                                    android:inputType="textPassword"
                                    android:id="@+id/editPw">
                                </EditText>
                            </LinearLayout>
                            <!-- 별명 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="별      명"
                                    android:gravity="center">
                                </TextView>
                                <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:hint="새로운 별명"
                                    android:textSize="15dp"
                                    android:id="@+id/editNickname">
                                </EditText>
                            </LinearLayout>
                            <!-- 이메일 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text="이 메 일"
                                    android:gravity="center">
                                </TextView>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:textSize="15dp"
                                    android:text="testEmail@naver.com"
                                    android:gravity="center"
                                    android:textColor="@color/black">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="확인"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/skyBlue"
                            android:id="@+id/editOkBtn">
                        </Button>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>

                </LinearLayout>
                <!-- 하단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">
                </LinearLayout>

            </LinearLayout>

            <!-- 로그아웃 확인 팝업 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#CC212121"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/logoutLayout">
                <!-- 상단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                </LinearLayout>
                <!-- 팝업 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@drawable/popup_box"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Logout"
                            android:textSize="25sp"
                            android:textColor="@color/skyBlue">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:text="로그아웃 하시겠습니까?"
                            android:textSize="17sp"
                            android:gravity="center">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="확인"
                                android:backgroundTint="@color/skyBlue"
                                android:id="@+id/lgyBtn">
                            </Button>
                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent">
                            </LinearLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#979797"
                                android:text="취소"
                                android:id="@+id/lgnBtn">
                            </Button>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                </LinearLayout>
                <!-- 하단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5">
                </LinearLayout>

            </LinearLayout>

            <!-- 계정삭제 확인 팝업 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#CC212121"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/deleteLayout">
                <!-- 상단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                </LinearLayout>
                <!-- 팝업 내용 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@drawable/popup_box"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:text="회원 탈퇴"
                            android:textSize="25sp"
                            android:textColor="@color/skyBlue"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:text="계정을 삭제 하시겠습니까?"
                            android:textSize="17sp"
                            android:gravity="center">
                        </TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            android:gravity="center">
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="확인"
                                android:backgroundTint="#979797"
                                android:id="@+id/dlyBtn">
                            </Button>
                            <LinearLayout
                                android:layout_width="10dp"
                                android:layout_height="match_parent">
                            </LinearLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/skyBlue"
                                android:text="취소"
                                android:id="@+id/dlnBtn">
                            </Button>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </LinearLayout>
                </LinearLayout>
                <!-- 하단 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

    </LinearLayout>
</LinearLayout>